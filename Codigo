CREATE TABLE PELICULAS(
CVE INT PRIMARY KEY,
NOMBRE character varying(50), 
GENERO character varying(50),
DURACION time, 
SINOPSIS text,
PRECIO money) 


CREATE TABLE USUARIOS(
CVE INT PRIMARY KEY,
NOMBRE character varying(50),
APELLIDO_PATERNO character varying(50),
APELLIDO_MATERNO character varying(50),
EDAD smallint, 
TELEFONO bigint, 
CONTRASEÃ‘A text, 
CORREO text, 
PLAN text
)

CREATE TABLE PERFIL (
CVE INT PRIMARY KEY,
CVE_USUARIO INT REFERENCES USUARIOS(CVE), 
NOMBRE_PERFIL character varying(50), 
FOTO bytea, /*ALERTA*/ 
CONTRASENA text, 
EDAD smallint)

CREATE TABLE VENTAS (
CVE INT PRIMARY KEY,
CVE_USUARIO INT REFERENCES USUARIOS(CVE), 
CANTIDAD INT, 
IVA DECIMAL, 
TOTAL DECIMAL
)

CREATE TABLE DETALLE_VENTA( 
CVE_VENTA INT REFERENCES VENTAS(CVE), 
CVE_PELICULA INT REFERENCES PELICULAS(CVE), 
SUBTOTAL MONEY
)


